{
  "name": "azi-blog",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "packageManager": "pnpm@7.9.5",
  "type": "module",
  "scripts": {
    "prepare": "npx only-allow pnpm",
    "postinstall": "husky install",
    "dev": "vite --port 3000 --open",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "lint": "eslint . --fix --ext .ts,.tsx,.json,.vue src",
    "commit": "git add . && git-cz",
    "changelog": "conventional-changelog -p gitmoji-config -i CHANGELOG.md -s",
    "generate": "node ./src/auto/generate.cjs"
  },
  "keywords": [
    "vue3",
    "template"
  ],
  "author": "azi",
  "license": "ISC",
  "dependencies": {
    "husky": "^8.0.1",
    "pinia": "^2.0.17",
    "postcss": "^8.4.14",
    "sass": "^1.54.3",
    "vue": "^3.2.37",
    "vue-router": "^4.1.3",
    "vuetify": "3.0.0-beta.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@mdi/js": "^7.0.96",
    "@types/node": "^18.6.4",
    "@types/nprogress": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "@vitejs/plugin-vue": "^3.0.0",
    "chalk": "4.0.0",
    "commitizen": "4.2.4",
    "commitlint": "^17.0.3",
    "commitlint-config-cz": "^0.13.3",
    "commitlint-config-git-commit-emoji": "^1.0.0",
    "conventional-changelog-cli": "^2.2.2",
    "conventional-changelog-gitmoji-config": "^1.4.3",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "6.9.0",
    "element-plus": "^2.2.15",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.4",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-vue": "^9.3.0",
    "fs-extra": "^10.1.0",
    "lint-staged": "^13.0.3",
    "normalize.css": "^8.0.1",
    "nprogress": "^0.2.0",
    "postcss-preset-env": "^7.7.2",
    "prettier": "^2.7.1",
    "typescript": "^4.6.4",
    "unplugin-auto-import": "^0.11.0",
    "unplugin-vue-components": "^0.22.0",
    "vite": "^3.0.0",
    "vue-tsc": "^0.38.4"
  },
  "browserslist": [
    "last 2 versions",
    "> 0.1",
    "not dead"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./cz.config.cjs"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,json,tsx,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/*.md": [
      "prettier --write"
    ]
  }
}
